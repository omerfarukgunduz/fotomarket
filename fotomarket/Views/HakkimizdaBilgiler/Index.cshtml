@using fotomarket.Models
@model List<Table_Hakkimizda>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}


<div style="text-align: center;">
    <h2>Hakkımızda Bölümü Düzenleme Sayfası</h2>
</div>

<div class="container">
    <div class="table-responsive">
        <table class="table table-bordered">
            <tbody>
                @foreach (var x in Model)
                {
                    <tr>
                        <th scope="row">ID</th>
                        <td>@x.ID</td>
                    </tr>
                    <tr>
                        <th scope="row">Düzenleyen Kullanıcı ID</th>
                        <td>@x.KullaniciID</td>
                    </tr>
                    <tr>
                        <th scope="row">Hakkımızda Metni</th>
                        <td>@x.HakkimizdaMetni</td>
                    </tr>
                    <tr>
                        <th scope="row">Güncelle</th>
                        <td><a href="/HakkimizdaBilgiler/HakkimizdaGetir/@x.ID" class="btn btn-warning">Güncelle</a></td>
                    </tr>

                }
            </tbody>
        </table>
    </div>
</div>
<br />

