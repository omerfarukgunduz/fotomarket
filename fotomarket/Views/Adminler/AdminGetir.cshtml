@model fotomarket.Models.Table_Admin

@{
    ViewBag.Title = "AdminGetir";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<div style="text-align: center;">
    <h2>Admin Güncelleme Sayfası</h2>
</div>

@using (Html.BeginForm("AdminGuncelle", "Adminler", FormMethod.Post, new { style = "margin-left: 5px;" }))
{
    <b> ID</b>
    <br />
    @Html.TextBoxFor(x => x.ID, new { @class = "form-control", @readonly = "readonly" })
    <br />
    <b>Admin Kullanıcı Adı:</b>
    @Html.TextBoxFor(x => x.AdminKullaniciAdi, new { @class = "form-control", required = "required" })
    <br />
    <b>Şifre:</b>
    @Html.TextBoxFor(x => x.Sifre, new { @class = "form-control", required = "required" })
    <br />

    <br />
    <button class="btn btn-info">Kaydet</button>

}