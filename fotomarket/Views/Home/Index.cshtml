<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Fotomarket.com</title>
    <link rel="icon" type="image/x-icon" href="https://i.hizliresim.com/rjikwgb.png" />

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <link href="/Tasarim/css/index.css" rel="stylesheet" />
</head>

<body class="d-flex flex-column">
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="/Home/Index">
            <img class="logo"
                 src="https://i.hizliresim.com/rjikwgb.png"
                 alt="Logo"
                 width="66"
                 height="66" />
        </a>
        <button class="navbar-toggler"
                type="button"
                data-toggle="collapse"
                data-target="#navbarSupportedContent"
                aria-controls="navbarSupportedContent"
                aria-expanded="false"
                aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a class="nav-link" href="/Home/Index">Ana Sayfa <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Home/DslrFotografMakineleri">DSLR Fotoğraf Makineleri</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Home/AynasizFotografMakineleri">Aynasız Fotoğraf Makineleri </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Home/VideoKameralar">Video Kameralar</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Home/AksiyonKameralari">Aksiyon Kameraları</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Home/Dronelar">Dronelar</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Home/Lensler">Lensler</a>
                </li>
                <li class="nav-item">
                    @if (Session["KullanciAdi"] != null)
                    {
                        <span class="nav-link"><i class="fas fa-user"></i> @Session["KullanciAdi"]</span>
                    }
                    else
                    {
                        <a class="nav-link" href="/KullaniciLogin/Index">
                            <i class="fas fa-user"></i> Giriş Yap
                        </a>
                    }
                </li>
                @if (Session["KullanciAdi"] == null)
                {
                    <li class="nav-item">
                        <a class="nav-link" href="/KullaniciKayit/Kayit">
                            <i class="fas fa-user"></i> Kayıt Ol
                        </a>
                    </li>
                }
                <li class="nav-item">
                    <a class="nav-link" href="#">
                        <i class="fas fa-shopping-cart"></i> Sepet
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Login/LogOut/">
                        <i class="fas fa-sign-out-alt"></i> Çıkış
                    </a>
                </li>
            </ul>
        </div>
    </nav>

    <!-- KAYDIRMALI FOTOĞRAFLAR  -------------------------------------------------->

    <section class="cover-photo">
        <div id="carouselExampleIndicators"
             class="carousel slide"
             data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carouselExampleIndicators"
                    data-slide-to="0"
                    class="active"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="4"></li>
            </ol>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="https://images.hepsiburada.net/banners/s/0/960-352/banner_20221009215434.jpeg/format:webp"
                         class="d-block w-100 img-fluid"
                         alt="Slide 1" />
                </div>
                <div class="carousel-item">
                    <img src="https://images.hepsiburada.net/assets/storefront/banners/10-05-2020_1604312048314_1.png"
                         class="d-block w-100 img-fluid"
                         alt="Slide 2" />
                </div>
                <div class="carousel-item">
                    <img src="https://images.hepsiburada.net/banners/s/0/960-352/banner_20220913131410.jpeg/format:webp"
                         class="d-block w-100 img-fluid"
                         alt="Slide 3" />
                </div>
                <div class="carousel-item">
                    <img src="https://images.hepsiburada.net/banners/s/0/960-352/banner_20230719154052.jpeg/format:webp"
                         class="d-block w-100 img-fluid"
                         alt="Slide 4" />
                </div>
                <div class="carousel-item">
                    <img src="https://images.hepsiburada.net/assets/storefront/banners/12-02-2020_1581510259280_1.png"
                         class="d-block w-100 img-fluid"
                         alt="Slide 5" />
                </div>
            </div>
            <a class="carousel-control-prev"
               href="#carouselExampleIndicators"
               role="button"
               data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next"
               href="#carouselExampleIndicators"
               role="button"
               data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </section>

    <!-- VİDEOLAR  -------------------------------------------------->
    <section>
        @Html.Action("VideolarPartial")
    </section>
    <!-- ÇOK SATANLAR ---------------------------------------------- -->
    <section>
        @Html.Action("CokSatanlarPartial")
    </section>
    <!-- BANNER ---------------------------------------------- -->

    <section class="banner-section">
        <div class="container mt-4">
            <div class="row">
                <div class="col-md-12">
                    <img src="https://i.hizliresim.com/juepbmu.png "
                         alt="Banner"
                         class="img-fluid" />
                </div>
            </div>
        </div>
    </section>

    <!-- POPULER KATEGORILER ---------------------------------------------- -->

    <div class="content container mt-4">
        <h2 class="text-center">POPÜLER KATEGORİLER</h2>
        <br />
        <div class="row justify-content-center">
            <div class="col-md-3 mb-4">
                <div class="card text-center">
                    <img src="https://www.digitalem.com/resimler/2015/01/fujifilm-x-a2-fotograf-makinesi.jpg"
                         class="card-img-top"
                         alt="Ürün 1" />
                    <div class="card-body">
                        <h5 class="card-title">Aynasız Makineler</h5>
                        <a href="/Home/AynasizFotografMakineleri" class="btn btn-primary btn-block">Kategoriye Git</a>
                    </div>
                </div>
            </div>
            <div class="col-md-3 mb-4">
                <div class="card text-center">
                    <img src="https://ideacdn.net/idea/jv/23/myassets/products/648/gopro-hero-11-black-mini-aksiyon-kamera-4008_min.jpeg?revision=1698916605"
                         class="card-img-top"
                         alt="Ürün 2" />
                    <div class="card-body">
                        <h5 class="card-title">Aksiyon Kameraları</h5>
                        <a href="/Home/AksiyonKameralari" class="btn btn-primary btn-block">Kategoriye Git</a>
                    </div>
                </div>
            </div>
            <div class="col-md-3 mb-4">
                <div class="card text-center">
                    <img src="https://cdn.akakce.com/dji/dji-mavic-mini-2-z.jpg"
                         class="card-img-top"
                         alt="Ürün 3" />
                    <div class="card-body">
                        <h5 class="card-title">Dronelar</h5>
                        <a href="/Home/Dronelar" class="btn btn-primary btn-block">Kategoriye Git</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- İLETİŞİM --------------------------------------------------------------------------------------------------------------->
    <section>
        @Html.Action("IletisimPartial")
    </section>

    <!-- Footer ---------------------------------------------------------------------------------------------------------------->
    <footer class="footer">
        <div class="container">
            <div class="row">
                <div class="col-md-6 text-left">
                    <a href="/Hakkimizda/Index" class="text-decoration-none">
                        <h5 class="m-0 p-0" style="color: rgb(220, 251, 110)">
                            Hakkımızda
                        </h5>
                    </a>
                   @Html.Action("HakkimizdaPartial")
                </div>
                <div class="col-md-6 text-right">
                    <h5>İletişim</h5>
                    @Html.Action("IletisimBilgileriPartial")

                </div>
            </div>
            <p class="text-center">&copy; 2023 FotoMarket</p>
        </div>
    </footer>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
