@model fotomarket.Models.Table_Kullanicilar

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" type="image/x-icon" href="https://i.hizliresim.com/rjikwgb.png" />

    <title>Kayıt Ol</title>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
</head>
<body>

    <nav class="navbar">
        <div class="navbar-brand d-flex justify-content-center">
            <a href="/Home/Index">
                <img src="https://i.hizliresim.com/rjikwgb.png" width="60" height="60" class="d-inline-block align-top img-fluid" alt="Logo" style=" margin-top: -20px;">
            </a>
        </div>
    </nav>

    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card" style="margin-top: 30px;">
                    <div class="card-header">
                        <h2 class="text-center">HALA KAYIT OLMADINIZ MI ?</h2>
                    </div>
                    <div class="card-body">
                        <form method="post" id="kayitol" class="form-group">
                            <div class="form-group">
                                <label for="KullaniciAdi">Kullanıcı Adı:</label>
                                <input type="text" class="form-control" id="KullaniciAdi" name="KullanciAdi" placeholder="Kullanıcı adınızı giriniz..." required>
                            </div>
                            <div class="form-group">
                                <label for="Sifre">Şifre:</label>
                                <input type="password" class="form-control" id="Sifre" name="Sifre" placeholder="Şifrenizi giriniz..." required>
                                <span toggle="#Sifre" class="toggle-password"></span>
                            </div>
                            <div class="form-group">
                                <label for="Eposta">E-posta:</label>
                                <input type="email" class="form-control" id="Eposta" name="Eposta" placeholder="E-posta adresinizi giriniz..." required>
                            </div>
                            <div class="form-group">
                                <label for="AdSoyad">Ad Soyad:</label>
                                <input type="text" class="form-control" id="AdSoyad" name="AdSoyad" placeholder="Adınızı ve Soyadınızı giriniz..." required>
                            </div>
                            <div class="form-group">
                                <label for="TC">TC Kimlik No:</label>
                                <input type="text" class="form-control" id="TC" name="TC" placeholder="TC Kimlik numaranızı giriniz (sadece rakam, 11 karakter)..." required>
                                <small class="text-muted">TC Kimlik numarası 11 karakter olmalıdır ve sadece rakam içermelidir.</small>
                            </div>
                            <div class="form-group">
                                <label for="CepTelefonu">Cep Telefonu:</label>
                                <input type="tel" class="form-control" id="CepTelefonu" name="CepTelefonu" placeholder="Cep telefon numaranızı giriniz (sadece rakam, 10 karakter)..." required>
                                <small class="text-muted">Cep telefon numarası 10 karakter olmalıdır ve sadece rakam içermelidir.</small>
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-primary btn-block">Kayıt Ol</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <br />
    <br />

    <style>
        body {
            background: rgb(220, 251, 110);
        }

        .navbar {
            height: 60px;
            background-color: #000000;
            overflow: hidden;
            margin: 0;
            margin-bottom: 0;
            text-align: center;
            color: white;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            z-index: 1000;
            display: flex;
            justify-content: center;
            align-items: center;
        }

            .navbar a {
                color: white;
                text-align: center;
                text-decoration: none;
                display: inline-block;
                margin-top: 10px;
            }

                .navbar a.active img {
                    height: 55px;
                    margin: -15px;
                    margin-bottom: 0px !important;
                }

        .main {
            margin-top: 100px;
            color: rgb(0, 0, 0);
            text-align: center;
        }

            .main h2 {
                font-family: Arial, sans-serif;
            }

            .main input {
                height: 50px;
                width: 350px;
                border-radius: 5px;
                padding-left: 50px;
                margin-bottom: 10px;
            }

            .main button {
                height: 50px;
                width: 350px;
                border-radius: 5px;
                margin-bottom: 10px;
                background-color: rgb(81, 81, 81);
                border: 2px solid black;
                color: rgb(255, 255, 255);
                transition: all 0.3s ease;
                font-weight: bold;
                font-size: 18px;
            }

                .main button:hover {
                    background-color: rgb(220, 251, 110);
                    box-shadow: 2px 2px 5px rgba(0, 0, 0, 0.5);
                    color: black;
                }

            .main a {
                color: aqua;
                font-weight: bold;
                text-decoration: none;
                width: 350px;
                overflow: hidden;
            }
    </style>

    <script>
        document.getElementById('kayitol').addEventListener('submit', function (event) {
            var form = event.target;
            var inputs = form.querySelectorAll('input');
            var isValid = true;

            for (var i = 0; i < inputs.length; i++) {
                if (!inputs[i].value) {
                    isValid = false;
                    inputs[i].classList.add('error');
                } else {
                    inputs[i].classList.remove('error');
                }
            }

            var TCInput = document.getElementById('TC');
            var CepTelefonuInput = document.getElementById('CepTelefonu');

            var tcPattern = /^\d{11}$/;
            var cepPattern = /^\d{10}$/;

            if (!tcPattern.test(TCInput.value)) {
                isValid = false;
                TCInput.classList.add('error');
            } else {
                TCInput.classList.remove('error');
            }

            if (!cepPattern.test(CepTelefonuInput.value)) {
                isValid = false;
                CepTelefonuInput.classList.add('error');
            } else {
                CepTelefonuInput.classList.remove('error');
            }

            if (!isValid) {
                event.preventDefault();
            } else {
                window.alert('Başarıyla Kayıt Oldunuz. Keyifli Alışverişler !');
            }
        });
    </script>

    <style>
        .error {
            border-color: red;
        }
    </style>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
