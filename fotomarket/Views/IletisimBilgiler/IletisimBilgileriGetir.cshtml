@model fotomarket.Models.Table_IletisimBilgileri

@{
    ViewBag.Title = "VideoGetir";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<div style="text-align: center;">
    <h2>İletişim Bilgileri Düzenleme Sayfası</h2>
</div>

@using (Html.BeginForm("IletisimBilgileriGuncelle", "IletisimBilgiler", FormMethod.Post, new { style = "margin-left: 5px;" }))
{
    <b> ID</b>
    <br />
    @Html.TextBoxFor(x => x.ID, new { @class = "form-control", @readonly = "readonly" })
    <br />
    <b>Düzenleyen Kullanıcı ID:</b>
    @Html.TextBoxFor(x => x.KullaniciID, new { @class = "form-control", required = "required" })
    <br />
    <b>Telefon Numarası</b>
    @Html.TextAreaFor(x => x.TelefonNumarasi, new { @class = "form-control", required = "required" })
    <br />
    <b>E-posta Adresi</b>
    @Html.TextAreaFor(x => x.EpostaAdresi, new { @class = "form-control", required = "required" })
    <br />
    <br />
    <button class="btn btn-info">Kaydet</button>

}