@model fotomarket.Models.Table_Dronelar

@{
    ViewBag.Title = "UrunGetir";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<div style="text-align: center;">
    <h2>Ürün Güncelleme Sayfası</h2>
</div>

@using (Html.BeginForm("UrunGuncelle", "Dronelar", FormMethod.Post, new { style = "margin-left: 5px;" }))
{
    <b> ID</b>
    <br />
    @Html.TextBoxFor(x => x.ID, new { @class = "form-control", @readonly = "readonly" })
    <br />
    <b>Marka ID:</b>
    @Html.TextBoxFor(x => x.MarkaID, new { @class = "form-control", required = "required" })
    <br />
    <b>Marka Adı:</b>
    @Html.TextBoxFor(x => x.MarkaAdi, new { @class = "form-control", required = "required" })
    <br />
    <b>Model Adı: </b>
    @Html.TextBoxFor(x => x.ModelAdi, new { @class = "form-control", required = "required" })
    <br />
    <b>Fiyat</b>
    @Html.TextBoxFor(x => x.UrunFiyati, new { @class = "form-control", required = "required" })
    <br />
    <b>Görsel Linki</b>
    @Html.TextBoxFor(x => x.UrunGorseli, new { @class = "form-control", required = "required" })
    <br />
    <button class="btn btn-info">Kaydet</button>

}